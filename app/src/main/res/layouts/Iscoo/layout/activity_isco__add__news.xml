<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Isco_Add_News"
    >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/coloraction"
        >

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/cancelpost"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="10dp"
                android:text="x"
                android:textSize="30dp"
                android:textColor="#fff"
                android:gravity="center"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Post"/>

    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/toolbar"
     >
    <LinearLayout
        android:id="@+id/activity_isco__add__news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:ems="10"
            android:gravity="top"
            android:textSize="20dp"
            android:hint="write the new ... "
            android:textColorHint="#4c71f5"
            android:id="@+id/newtxt"
            android:background="@drawable/rect2"
            android:padding="15dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/newimgpath"
            android:scaleType="centerCrop"/>

    </LinearLayout>


</ScrollView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/relative"
    android:background="@drawable/rect2"
    android:layout_alignParentBottom="true">
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_height="1dp"
        android:id="@+id/line"
        android:background="@android:color/darker_gray"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line"
        android:id="@+id/btnnewimg"
        android:layout_margin="5dp"
        android:src="@drawable/cam"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Post"
        android:layout_margin="5dp"
        android:layout_below="@+id/line"
        android:layout_alignParentRight="true"
        android:id="@+id/pushbtn"
        android:textSize="16dp"
        android:textColor="#4c71f5"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/borderect"
        />
</RelativeLayout>

</RelativeLayout>