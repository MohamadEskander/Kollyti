<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/group_select_std"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:weightSum="4">
        <com.example.isco.kolite.customfonts.MyTextView
            android:id="@+id/group_name_std"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="mohamed eskahrg kjhrgbuir   gvrjhbg"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:textColor="@color/listtext"
            android:maxLines="1"
            android:layout_weight="3.5"
            />

        <com.rey.material.widget.CheckBox
            style="@style/Material.Drawable.CheckBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/group_true_std"
            android:enabled="false"
            android:layout_weight=".5"/>

    </LinearLayout>


</LinearLayout>